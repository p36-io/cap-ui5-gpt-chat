{
    "build": {
        "target": "gen",
        "tasks": [
            {
                "for": "hana",
                "src": "db",
                "options": {
                    "model": [
                        "db",
                        "srv"
                    ]
                }
            },
            {
                "for": "node-cf",
                "src": "srv",
                "options": {
                    "model": [
                        "db",
                        "srv"
                    ]
                }
            }
        ]
    },
    "[production]": {
        "requires": {
            "db": {
                "kind": "hana",
                "model": [
                    "db",
                    "srv"
                ]
            },
            "uaa": {
                "kind": "xsuaa"
            }
        }
    },
    "requires": {
        "db": {
            "kind": "sqlite",
            "model": [
                "db",
                "srv"
            ],
            "credentials": {
                "database": "chat.db"
            }
        }
    },
    "odata": {
        "version": "v4"
    }
}